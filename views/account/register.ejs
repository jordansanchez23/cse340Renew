<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<section class="formConteiner">
<form action="/account/register" method="post">
    <label for="account_firstname">First Name</label>
    <input type="text" id="account_firstname" placeholder="Joseph" name="account_firstname" required>

    <label for="account_lastname">Last Name</label>
    <input type="text" id="account_lastname" placeholder="Smith" name="account_lastname" required>

    <label for="account_email">Email</label>
    <input type="email" id="account_email" placeholder="placeholder@example.com" name="account_email" required>

    <label for="account_password">Password</label>
    <input type="password" id="account_password" placeholder="Password" name="account_password" required>

    <button type="submit">Register</button>
</form>
</section>



