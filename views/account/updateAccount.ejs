<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<section class="formConteiner">
<h2>Account Update</h2>
<form action="/account/updateAccount" method="post">
    <label for="account_firstname">First Name</label>
    <input type="text" id="account_firstname" placeholder="Joseph" name="account_firstname" required value="<%= locals.account_firstname %>">

    <label for="account_lastname">Last Name</label>
    <input type="text" id="account_lastname" placeholder="Smith" name="account_lastname" required value="<%= locals.account_lastname %>">

    <label for="account_email">Email</label>
    <input type="email" id="account_email" placeholder="placeholder@example.com" name="account_email" required value="<%= locals.account_email %>">
    
    <button type="submit">Update</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>
</section>

<section class="formConteiner">
<h2>Change Password</h2>
<form action="/account/updatePassword" method="post">
    <label for="account_password">Password</label>
    <div class="passwordAlert">
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <input type="password" id="account_password" placeholder="Password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    </div>

    <button type="submit">Update</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>
</section>