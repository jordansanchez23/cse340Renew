<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<section class="formConteiner">
<form action="/account/login" method="post">
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" placeholder="placeholder@example.com" name="account_email" required>

    <label for="account_password">Password:</label>
    <input type="password" id="account_password" placeholder="Password" name="account_password" required>
    <button type="submit">Login</button>
</form>
<p>No account? <a href="/account/register">Sign-up</a></p>
</section>
<%# messages() %>

